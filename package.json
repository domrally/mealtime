{
	"license": "MIT",
	"name": "peekeasy",
	"version": "0.16.0",
	"author": "Dom Mandy",
	"main": "build/exports/exports.js",
	"types": "build/exports/exports.d.ts",
	"homepage": "https://domrally.github.io/peekeasy",
	"description": "tools for behavior, delegation, and state in typescript",
	"scripts": {
		"example": "npx ts-node src/tests/example/example.ts",
		"integration": "npx ts-node src/tests/integration/integration.ts",
		"lint": "npx eslint && npx prettier --check .",
		"start": "npx typedoc",
		"stop": "npx eslint --fix && npx prettier --write .",
		"test": "npm run example && npm run integration && npm run lint && npm run unit",
		"unit": "npx ts-node src/tests/unit/unit.ts"
	},
	"files": [
		"build/exports"
	],
	"exports": {
		".": "./build/exports/exports.js"
	},
	"bugs": {
		"url": "https://github.com/domrally/peekeasy/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/domrally/peekeasy.git"
	},
	"keywords": [
		"event",
		"proxy",
		"state",
		"action",
		"forward",
		"pattern",
		"behavior",
		"delegate",
		"iterator",
		"observer",
		"reference",
		"delegation",
		"forwarding",
		"vectorized"
	],
	"devDependencies": {
		"@types/node": "*",
		"@typescript-eslint/eslint-plugin": "*",
		"@typescript-eslint/parser": "*",
		"eslint": "*",
		"eslint-config-alloy": "*",
		"eslint-config-prettier": "*",
		"prettier": "*",
		"ts-node": "*",
		"typedoc": "*",
		"typescript": "*"
	}
